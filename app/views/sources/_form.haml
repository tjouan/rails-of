= form_for @source do |f|
  %fieldset
    - if @source.errors.any?
      #error_explanation
        %h2= "#{pluralize(@source.errors.count, "error")} prohibited this source from being saved:"
        %ul
          - @source.errors.full_messages.each do |msg|
            %li= msg

    %p.field
      %label
        Label
        %br
        = f.text_field :label

    %p.field
      %label
        Description
        %br
        = f.text_area :description

    %fieldset
      %legend Fichier

      %p.field
        %label
          - unless @source.new_record? || !@source.file?
            = "Modifier le fichier actuel (#{@source.file_name})"
            %br
          = f.file_field :file

      %p.field
        = f.check_box :header
        = f.label :header, 'ce fichier comporte un en-tÃªte'

  %ul.actions
    %li
      = f.submit 'Enregistrer'
    %li
      = link_to 'Retour', sources_path
