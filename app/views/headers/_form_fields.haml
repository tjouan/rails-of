%table.source-headers-list
  %thead
    %tr
      %th Nom
      %th Type
      %th Exemple
  %tbody
    = f.fields_for :headers do |hf|
      %tr
        %td
          = hf.text_field :name
        %td.list-type
          = hf.select(:type, Header::TYPES.map { |k, v| [v.capitalize, k] })
          = hf.hidden_field :position
        %td
          = hf.object.value_sample
