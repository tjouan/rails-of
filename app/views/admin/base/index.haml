%h1
  Listing
  = @model.plural_name


- if @collection.empty?
  %p No record found.

- else
  %table.list
    %thead
      %tr
        %th
          Record
        - @model.list_attrs.each do |k, v|
          %th= k.capitalize
        %th.list-date
          Created at
        %th.list-date
          Updated at
        - if @model.edit? || @model.destroy?
          %th.list-actions
            Actions

    %tbody
      - @collection.each do |e|
        %tr
          %td
            = link_to e, object_path(e)
          - @model.list_attrs.each do |k, v|
            %th= v.call e
          %td.list-date
            = e.created_at
          %td.list-date
            = e.updated_at
          - if @model.edit? || @model.destroy?
            %td.list-actions
              %ul.actions
                - if @model.edit?
                  = action_link :edit, edit_path(e)
                - if @model.destroy?
                  = action_link :delete, object_path(e)


%ul.actions
  - if @model.new?
    %li
      = link_to "New #{@model.singular_name}", new_path(@model)
  %li
    = link_to 'Back', admin_path
