%table.works-list
  %thead
    %tr
      %th
        Données
      %th
        Outil
      %th.list-date
        Date
      %th.list-status
        État
      %th.list-actions
        Actions

  %tbody
    - works.each do |work|
      %tr
        %td
          = work.source.label
        %td
          = work.operation.name
        %td.list-date
          = l work.created_at
        %td.list-status
          = t(work.status)
        %td.list-actions
          - if work.status == :processed
            %ul.actions
              = action_link :report, work_path(work)
